{
  "name": "ssb-neon-keys",
  "version": "7.2.1-3",
  "description": "Rust-in-Node.js variant of ssb-keys",
  "main": "lib/index.js",
  "author": "Andre Staltz <andre@staltz.com>",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staltz/ssb-neon-keys.git"
  },
  "dependencies": {
    "neon-cli": "~0.4.1",
    "neon-load-or-build": "1.0.0",
    "run-script-os": "^1.1.1"
  },
  "devDependencies": {
    "cpy-cli": "^3.1.1",
    "electron-build-env": "^0.2.0",
    "neon-tag-prebuild": "^1.0.0",
    "ssb-keys": "7.2.1",
    "tape": "^3.0.3"
  },
  "scripts": {
    "install": "run-script-os",
    "install:win32": "IF NOT EXIST \".git\" neon-load-or-build",
    "install:nix": "if [ ! -d .git ]; then neon-load-or-build; fi",
    "build-debug": "neon build",
    "build-release": "neon build --release",
    "build-release-electron": "electron-build-env neon build --release",
    "tag-prebuild": "neon-tag-prebuild",
    "tag-prebuild-electron": "electron-build-env neon-tag-prebuild",
    "setup-compat-tests": "cpy ./node_modules/ssb-keys/test/* ./test-compat",
    "pretest": "npm run build-debug",
    "test-compat": "npm run setup-compat-tests && tape test-compat/*.js",
    "test-extra": "tape test-extra/*.js",
    "test": "npm run test-compat && npm run test-extra",
    "prepublishOnly": "if [ -z \"$CI\" ]; then echo \"can only npm publish from CI\" && exit 1; fi"
  },
  "binary": {
    "module_name": "index",
    "host": "https://github.com/staltz/ssb-neon-keys/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  }
}
